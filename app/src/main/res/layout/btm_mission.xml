<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:paddingTop="12dp">

            <include
                android:id="@+id/AMissionLayout"
                layout="@layout/animated_mission_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/BMissionLayout"
                layout="@layout/animated_mission_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/CMissionLayout"
                layout="@layout/animated_mission_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1" />
        </LinearLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/descriptionSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_mission_description"
            android:fontFamily="@font/inform_bold"
            android:padding="14dp"
            android:text="@string/mission_description_title"
            android:textSize="26sp"
            app:thumbIcon="@drawable/ic_help" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/showNextCardSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_mission_description"
            android:fontFamily="@font/inform_bold"
            android:padding="14dp"
            android:text="@string/show_next_card_mission_title"
            android:textSize="26sp"
            app:thumbIcon="@drawable/next_plan" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>