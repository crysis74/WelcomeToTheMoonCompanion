<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/mr_chargerg"
        android:gravity="center"
        android:text="@string/app_name_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deckGeneration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/mr_chargerg"
        android:gravity="center"
        android:text="@string/game_creation_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <TextView
        android:id="@+id/selectGameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/mr_chargerg"
        android:gravity="center"
        android:text="@string/game_select_field_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deckGeneration" />

    <ScrollView
        android:id="@+id/fieldRadioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/generateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectGameField">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/adventure1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr_chargerg"
                android:text="@string/adventure_1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <RadioButton
                android:id="@+id/adventure2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr_chargerg"
                android:text="@string/adventure_2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <RadioButton
                android:id="@+id/adventure3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr_chargerg"
                android:text="@string/adventure_3"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <RadioButton
                android:id="@+id/adventure4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr_chargerg"
                android:text="@string/adventure_4"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <RadioButton
                android:id="@+id/adventure5Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr_chargerg"
                android:text="@string/adventure_5"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <RadioButton
                android:id="@+id/adventure6Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr_chargerg"
                android:text="@string/adventure_6"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <RadioButton
                android:id="@+id/adventure7Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr_chargerg"
                android:text="@string/adventure_7"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <RadioButton
                android:id="@+id/adventure8Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr_chargerg"
                android:text="@string/adventure_8"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/generateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/mr_chargerg"
        android:paddingVertical="12dp"
        android:text="@string/create_deck"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>