<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/missionType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inform_bold"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        tools:text="A" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/uncompletedMissionLayout"
            layout="@layout/mission_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/completedMissionLayout"
            layout="@layout/mission_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ustroke"
        android:gravity="center"
        tools:text="Полностью пронумеруйте все 3 уровня звездолёта «Экипаж звездолёта» и «Система водообеспечения»." />
</LinearLayout>